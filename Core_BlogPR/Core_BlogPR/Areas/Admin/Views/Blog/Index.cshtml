@model List<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Blog Listesi</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Admin</a>
            </li>
            <li class="breadcrumb-item">
                <a>Blog</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Blog Listesi</strong>
            </li>
        </ol>
    </div>

</div>
<br />
<br />
<form method="get">
    <div class="form-outline mb-4 col-md-12 row">
        @*<label class="form-label" for="datatable-search-input"></label>*@

        <input type="search" class="form-control col-md-11 " name="searchBlog" placeholder="Blog ara">


        <button type="submit" class="btn btn-primary col-md-1">

            <i class="fa fa-search"></i>

        </button>
    </div>
</form>

<div id="datatable">
</div>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Blog Başlığı</th>
            <th>Blog oluşturulma tarihi</th>

            <th>Blog durumu</th>
            <th>Bloga git</th>
            <th>Uyarı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.blogID</td>
                <td>@item.blogTitle</td>
                <td>@item.blogCreateDate.ToShortDateString()</td>

                <td>@item.blogStatus</td>
                <td><a href="/Blog/BlogReadAll/@item.blogID" class="btn btn-info">Bloga git</a></td>
                <td><a class="btn btn-warning">Uyarı</a></td>
            </tr>
        }

    </tbody>
</table>

