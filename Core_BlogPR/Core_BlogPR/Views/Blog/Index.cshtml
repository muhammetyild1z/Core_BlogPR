@using EntityLayer.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}



<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Blog Yazıları</h3>
         
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        if (item.blogStatus == true)
                        {


                            
                    <div class="col-lg-4 card" >
                        <a href="/Blog/BlogReadAll/@item.blogID/" >
                            <img src="~/AddBlogImage/@item.blogThumbnailImage" class="card-img-top img-fluid" alt="" style="width:350px;height:228px;">
                        </a>
                        <div class="card-body">
                            <ul class="blog-icons my-4">
                                <li>
                                    <a href="#">
                                        <i class="far fa-calendar-alt"></i> @(((DateTime)item.blogCreateDate).ToString("dd-MMM-yy"))
                                        @*@item.blogCreateDate.ToShortDateString()*@
                                    </a>
                                </li>


                                <li class="mx-2">
                                    <a href="#">
                                        <i class="far fa-comment">&nbsp;@item.Comments.Count </i>
                                    </a>
                                </li>

                                <li>
                                    <a href="#">
                                        <i class="fas fa-eye"></i> @item.Catagory.catagoryName
                                    </a>
                                </li>
                            </ul>
                            <h5 class="card-title">
                                <a href="/Blog/BlogReadAll/@item.blogID">@item.blogTitle</a>
                            </h5>
                            @* kısıtlama koyulacak *@
                            <p class="card-text mb-3">@item.blogContent.Substring(0, item.blogContent.Substring(0, 95).LastIndexOf(" ")) ... </p>
                            <a href="/Blog/BlogReadAll/@item.blogID/" class="btn btn-primary read-m mb-4" >Devamını Oku</a>
                        </div>
                    </div>
                            <br />
                        }
                    }



                </div>

            </div>



        </div>
    </div>
</section>
