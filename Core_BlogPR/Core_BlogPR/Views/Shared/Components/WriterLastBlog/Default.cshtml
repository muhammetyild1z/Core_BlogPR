
@model IEnumerable<EntityLayer.Concrete.Blog>



<div class="tech-btm">
    <h4>Yazarın diğer yazıları</h4>
    @foreach (var item in Model)
    {
        if (item.writerID== ViewBag.v)
        {

        
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/Blog/BlogReadAll/@item.blogID">
                    <img src="~/AddBlogImage/@item.blogThumbnailImage" class="img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="/Blog/BlogReadAll/@item.blogID">@item.blogTitle </a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @item.blogCreateDate
                    </span>
                </div>
            </div>

        </div>
        }
    }

</div> 
